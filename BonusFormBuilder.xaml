<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PostSecondaryPassport.BonusFormBuilder">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout>
			<StackLayout x:Name="sl_header" VerticalOptions="Start">
			</StackLayout>
			<StackLayout x:Name="sl_fields" Orientation="Vertical" VerticalOptions="CenterAndExpand" BackgroundColor="{StaticResource primaryColor}">
			</StackLayout>
			<StackLayout x:Name="sl_bottom" Orientation="Horizontal" HorizontalOptions="CenterAndExpand" BackgroundColor="{StaticResource primaryColor}">
				<Button x:Name="b_submit" Text="Submit" HorizontalOptions="Center" />
				<Button x:Name="b_cancel" Text="Cancel" HorizontalOptions="Center" />
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>